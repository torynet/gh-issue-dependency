{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go: Build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-v", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Test All",
      "type": "shell", 
      "command": "go",
      "args": ["test", "-v", "./..."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Test Current Package",
      "type": "shell",
      "command": "go", 
      "args": ["test", "-v", "."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Test with Coverage",
      "type": "shell",
      "command": "go",
      "args": ["test", "-v", "-cover", "./..."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Lint",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["run", "./..."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Format",
      "type": "shell",
      "command": "goimports",
      "args": ["-w", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Go: Mod Tidy",
      "type": "shell",
      "command": "go",
      "args": ["mod", "tidy"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Go: Vet",
      "type": "shell",
      "command": "go",
      "args": ["vet", "./..."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent", 
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Development: Full Check",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Go: Format",
        "Go: Mod Tidy", 
        "Go: Vet",
        "Go: Lint",
        "Go: Test All"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Markdown: Lint",
      "type": "shell",
      "command": "npx",
      "args": ["markdownlint", "**/*.md", "--ignore", "node_modules"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Status",
      "type": "shell",
      "command": "git",
      "args": ["status", "--porcelain"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "GitHub CLI: Create PR",
      "type": "shell",
      "command": "gh",
      "args": ["pr", "create", "--fill"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "MkDocs: Serve",
      "type": "shell",
      "command": "mkdocs",
      "args": ["serve"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    }
  ]
}